<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/img_place"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_margin="@dimen/image_margin"
        android:background="@color/colorPrimaryLight"/>

    <TextView
        android:id="@+id/tv_name_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/img_place"
        android:text="TextView"
        android:layout_marginTop="@dimen/place_title_margin"
        android:textSize="@dimen/title_text_size"
        android:textStyle="italic"
        android:textColor="@color/primaryText"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_name_place"
        android:layout_below="@+id/tv_name_place"
        android:text="TextView"
        android:textSize="@dimen/price_address_text_size"
        android:textColor="@color/primaryText"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_price"
        android:layout_below="@+id/tv_price"
        android:text="TextView"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/price_address_text_size" />

    <TextView
        android:id="@+id/tv_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_name_place"
        android:layout_marginEnd="14dp"
        android:background="@color/colorAccent"
        android:paddingLeft="@dimen/rate_padding"
        android:paddingRight="@dimen/rate_padding"
        android:text="7.6" />


</RelativeLayout>